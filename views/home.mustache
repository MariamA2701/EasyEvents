<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="publicHalls.js"></script>
    <script>
        let map;
        let markers = [];
        let infowindow;

        function initMap() {
            map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: 43.252239, lng: -79.831573 },
                zoom: 12
            });

            infowindow = new google.maps.InfoWindow();

            // Call a function to load markers for the public halls
            loadPublicHallsMarkers();
        }

        function loadPublicHallsMarkers() {
            // Clear existing markers
            markers.forEach(marker => marker.setMap(null));
            markers = [];

            // Loop through public halls data 
            publicHalls.features.forEach(hall => {
                let marker = new google.maps.Marker({
                    position: { lat: hall.geometry.coordinates[1], lng: hall.geometry.coordinates[0] },
                    map: map,
                    title: hall.BUSINESS_NAME
                });

                marker.addListener("click", function () {
                    infowindow.setContent(hall.BUSINESS_NAME);
                    infowindow.open(map, marker);
                });

                markers.push(marker);
            });
        }
    </script>

    <script src="https://maps.google.com/maps/api/js?key=AIzaSyBUNVx9XY7mmgphinu9PjxfYmRWp3cC47s&callback=initMap"></script>

