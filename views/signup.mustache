{{>header}}

{{>navigation}}

<div class="row">
  <div class="leftcolumn">
    <div class="card">
      <h2>Sign-up for an account</h2>
      <p>Enter your username and password below to sign-up.</p>
      <p style="color:red;">{{ signup_error }}</p>
      {{#signup_success}}
      <p><strong>User account created! </strong><a href='/login'>Login</a> to access your new account.</p>
      {{/signup_success}}
      <form action="/signup/attemptsignup" method="post" autocomplete="off">
        <label for="username">Username:</label>
        <input type="text" name="username"> <br /> <br />
        <label for="password">Password:</label>
        <input type="text" name="password"> <br /> <br />
        <label for="age">Age:</label>
        <input type="text" name="age"><br/><br/>
        <input type="submit" value="Sign-up">
      </form> <br />
    </div>
  </div>

  {{>sidebar}}

</div>

{{>footer}}